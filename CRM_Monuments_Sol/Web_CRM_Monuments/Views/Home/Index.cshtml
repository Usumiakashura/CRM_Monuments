@model List<Contract>

@{
    ViewData["Title"] = "Index";
}


<div class="content-box">
    <div class="wrapper w6">
        <div>
            <input type="button" value="Все договора" class="full" 
                   id="AllContracts" style="height: 50px; margin-right: 10px;" />
        </div>
        <div>
            <input type="button" value="Портреты" class="full" 
                   id="AllPortraits" style="height: 50px; margin-right: 10px;" />
        </div>
        <div>
            <input type="button" value="Медальоны" class="full" 
                   id="AllMedallions" style="height: 50px; margin-right: 10px;" />
        </div>
        <div>
            <input type="button" value="Текста" class="full" 
                   id="AllTexts" style="height: 50px; margin-right: 10px;" />
        </div>
        @*<div>
            <input type="button" value="Кнопка" class="full" style="height: 50px; margin-right: 10px;" />
        </div>
        <div>
            <input type="button" value="Кнопка" class="full" style="height: 50px; margin-right: 10px;" />
        </div>*@
    </div>

    <div id="ContentBlock">
        <partial name="_AllContractsPartial" model="@Model" />
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $("#AllContracts").click(function () {
                GetPartialView("/Home/AllContracts");
            });
            $("#AllPortraits").click(function () {
                GetPartialView("/Home/AllPortraits");
            });
            $("#AllMedallions").click(function () {
                GetPartialView("/Home/AllMedallions");
            });
            $("#AllTexts").click(function () {
                GetPartialView("/Home/AllTexts");
            });
            
        });

        function GetPartialView(url) {
            var xhr = new XMLHttpRequest();
            xhr.open("GET", url, true);
            xhr.send();
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    document.getElementById("ContentBlock").innerHTML = xhr.responseText;
                    console.log(xhr.responseText);
                }
            }
        }


    </script>
}




